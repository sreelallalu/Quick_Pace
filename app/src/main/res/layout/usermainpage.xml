<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/sdfgggg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout

    android:id="@+id/first_notification"
    android:layout_marginRight="25dp"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="25dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="#000000"
            android:id="@+id/user_main_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="message"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:textColor="#000000"
            android:id="@+id/user_main_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="location"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>
    <Button
        android:textColor="#ffff"
        android:background="#947b7b"
        android:text="Send Notification"
        android:id="@+id/send_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/first_second"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:id="@+id/user_main2_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="message"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="#000000"
                android:id="@+id/user_main2_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="location"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>
        <CheckBox
            android:layout_marginTop="5dp"

            android:id="@+id/check_police"
            android:text="police"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginTop="5dp"

            android:id="@+id/check_ambulance"
            android:text="ambulance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginTop="5dp"
        android:id="@+id/check_fireforse"
        android:text="fireforse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <CheckBox
            android:layout_marginTop="5dp"

            android:id="@+id/check_hospital"
        android:text="hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <Button
android:layout_marginBottom="60dp"
            android:layout_marginTop="15dp"
            android:textColor="#ffff"
            android:background="#947b7b"
            android:text="Send Request"
            android:id="@+id/send2_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/third_notific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/third_notifi"
        android:layout_width="match_parent"
        android:layout_height="150dp">


        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/take_pic"
            android:textColor="#ffff"
            android:background="#947b7b"
            android:text="choose pic"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <ImageView
            android:layout_weight="1"
            android:src="@drawable/ic_add_a_photo_black_24dp"
            android:id="@+id/take_pic_previewww"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:textColor="#000000"
                    android:id="@+id/user_main3_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="message"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_marginBottom="60dp"
            android:textColor="#ffff"
            android:background="#947b7b"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="SEND PIC"
            android:id="@+id/send_pic_server"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>


</ScrollView>